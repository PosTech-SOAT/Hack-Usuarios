{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"strictPropertyInitialization": false

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
